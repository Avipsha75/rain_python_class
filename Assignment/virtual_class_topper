import random

# Number of students
num_students = 300

# Create a list of random marks for 300 students
students = []
for i in range(1, num_students + 1):
    marks = [random.randint(0, 100) for _ in range(10)]  # Random marks for 10 subjects
    total_score = sum(marks)
    students.append((i, total_score))  # Store as (student_id, total_score)

# Find the topper and the lowest scorer
topper = max(students, key=lambda student: student[1])
lowest_scorer = min(students, key=lambda student: student[1])

print("Topper:")
print(f"Student ID: {topper[0]}, Total Score: {topper[1]}")

print("\nLowest Scorer:")
print(f"Student ID: {lowest_scorer[0]}, Total Score: {lowest_scorer[1]}")
